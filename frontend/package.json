        "winston-daily-rotate-file": "^4.7.1"
    },
    "scripts": {
        "frontend-start": "react-scripts start",
        "backend-start": "nodemon -r dotenv/config ./bff/server.js",
        "dev-start": "npm run build && npm run backend-start",
        "start": "npm run build && node -r dotenv/config ./bff/server.js --env production",
        "build": "react-scripts build",
        "frontend-test": "react-scripts test",
        "bff-test": "node --experimental-vm-modules node_modules/jest/bin/jest.js -- bff",
        "eject": "react-scripts eject",
        "format": "prettier --write --cache --cache-strategy metadata ./ && eslint --fix --cache --ext .js,.cjs ./"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "eslint": "^8.35.0",
        "jest": "^27.5.1",
        "nodemon": "^2.0.21",
        "prettier": "^2.8.4"
    }
