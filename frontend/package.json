{
    "name": "frontend",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "dependencies": {
        "@ltd/j-toml": "^1.38.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "axios": "^1.3.4",
        "convict": "^6.2.4",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "express-validator": "^6.15.0",
        "helmet": "^6.0.1",
        "liquidjs": "^10.6.1",
        "memorystore": "^1.6.7",
        "morgan": "^1.10.0",
